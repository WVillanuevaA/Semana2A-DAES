<Window x:Class="Semana2A.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Semana2A"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <Label x:Name="label_usuario" Content="Nombre de Usuario:" HorizontalAlignment="Left" Height="30" Margin="161,86,0,0" VerticalAlignment="Top" Width="158" FontWeight="Bold"/>
        <Label x:Name="label_contraseña" Content="Contraseña:" HorizontalAlignment="Left" Height="34" Margin="161,168,0,0" VerticalAlignment="Top" Width="173" FontWeight="Bold"/>
        <TextBox x:Name="textbox_usuario" HorizontalAlignment="Left" Height="30" Margin="376,86,0,0" TextWrapping="Wrap" Text="Usuario" VerticalAlignment="Top" Width="186" GotKeyboardFocus="textbox_usuario_GotKeyboardFocus"/>
        <TextBox x:Name="textbox_contraseña" HorizontalAlignment="Left" Height="34" Margin="376,168,0,0" TextWrapping="Wrap" Text="Contraseña" VerticalAlignment="Top" Width="186" GotKeyboardFocus="textbox_contraseña_GotKeyboardFocus"/>
        <Button x:Name="button_ingresar" Content="Ingresar" HorizontalAlignment="Left" Height="31" Margin="301,272,0,0" VerticalAlignment="Top" Width="120" FontWeight="Bold" Click="button_ingresar_Click"/>

    </Grid>
</Window>
